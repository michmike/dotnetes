{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"envy",
      "labels":{
         "app":"envy"
      }
   },
   "spec":{
      "replicas":2,
      "selector":{
         "app":"envy"
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"envy"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"envy",
                  "image":"envygo:1.0",
                  "ports":[
                     {
                        "name":"http-server",
                        "containerPort":3000
                     }
                  ]
               }
            ]
         }
      }
   }
}